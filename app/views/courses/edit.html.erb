<h1>Edit Course</h1>

<%= form_with(model: @course, local: true, data: { turbo: false }) do |form| %>

  <% if @course.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">Errors:</h4>
      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', value: @course.title %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control', value: @course.description %>
  </div>

  <%= form.submit 'Update Course', class: 'btn btn-primary' %>
<% end %>
