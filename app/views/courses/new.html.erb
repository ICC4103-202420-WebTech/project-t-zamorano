<div class="container">
  <h1 class="my-4">Create New Course</h1>

  <!-- Mensajes de error para el formulario -->
  <% if @course.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h4>
      <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @course, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
      <%= form.error :title, class: 'text-danger' %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
      <%= form.error :description, class: 'text-danger' %>
    </div>

    <%= form.submit 'Create Course', class: 'btn btn-primary' %>
  <% end %>
</div>
